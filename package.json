{
  "name": "clean-node-api",
  "version": "3.1.0",
  "main": "index.js",
  "author": "Lucas William <lucaswilliameufrasio@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "rimraf dist && tsc -p tsconfig-build.json -w",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "debug": "nodemon -L --watch src --inspect=0.0.0.0:9222 --nolazy --exec \"tsc -p tsconfig-build.json && node ./dist/main/server.js\"",
    "dev": "nodemon -r dotenv/config --watch src --exec \"tsc -p tsconfig-build.json && node ./dist/main/server.js\"",
    "up": "yarn run build && docker-compose up -d",
    "down": "docker-compose down",
    "up:sudo": "yarn run build && sudo docker-compose up -d",
    "down:sudo": "sudo docker-compose down",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test --watch -c jest-unit-config.js",
    "test:integration": "yarn test --watch -c jest-integration-config.js",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage",
    "test:coveralls": "yarn test:ci && coveralls < coverage/lcov.info"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.0.0-alpha.5",
    "@shelf/jest-mongodb": "^2.2.0",
    "@swc-node/jest": "^1.4.3",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.27",
    "@types/faker": "^5.5.9",
    "@types/graphql": "^14.5.0",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^17.0.5",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "apollo-server-integration-testing": "^3.0.0",
    "copyfiles": "^2.3.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.5.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^4.0.7",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.2",
    "mockdate": "^3.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.3.1",
    "@graphql-tools/utils": "^8.5.5",
    "apollo-server-express": "^3.5.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^15.0.0",
    "express": "^4.17.2",
    "graphql": "^16.2.0",
    "graphql-iso-date": "^3.6.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongo-round": "^1.0.0",
    "mongodb": "^4.3.1",
    "nodemon": "^2.0.15",
    "swagger-ui-express": "^4.3.0",
    "validator": "^13.7.0"
  },
  "resolutions": {
    "apollo-server-integration-testing@npm:3.0.0/apollo-server-core": "^3.1.2",
    "apollo-server-integration-testing@npm:3.0.0/apollo-server-express": "^3.1.2"
  },
  "engines": {
    "node": "16.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
