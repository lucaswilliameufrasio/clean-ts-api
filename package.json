{
  "name": "clean-node-api",
  "version": "3.0.3",
  "main": "index.js",
  "author": "Lucas William <lucaswilliameufrasio@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "rimraf dist && tsc -p tsconfig-build.json -w",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "up": "yarn run build && docker-compose up -d",
    "down": "docker-compose down",
    "up:sudo": "yarn run build && sudo docker-compose up -d",
    "down:sudo": "sudo docker-compose down",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test --watch -c jest-unit-config.js",
    "test:integration": "yarn test --watch -c jest-integration-config.js",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage",
    "test:coveralls": "yarn test:ci && coveralls < coverage/lcov.info"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.2",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.7",
    "@types/faker": "^5.1.0",
    "@types/graphql": "^14.5.0",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.5.26",
    "@types/node": "^14.14.20",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.2",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "apollo-server-integration-testing": "^2.3.0",
    "bson-objectid": "^1.3.1",
    "copyfiles": "^2.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.17.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "4",
    "eslint-plugin-standard": "^5.0.0",
    "faker": "^5.1.0",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.7",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "mockdate": "^3.0.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.2.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@types/swagger-ui-express": "^4.1.2",
    "apollo-server-express": "^2.19.0",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql-iso-date": "^3.6.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongo-round": "^1.0.0",
    "mongodb": "^3.6.0",
    "nodemon": "^2.0.7",
    "swagger-ui-express": "^4.1.6",
    "validator": "^13.1.1"
  },
  "engines": {
    "node": "12.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
